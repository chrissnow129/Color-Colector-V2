{
  "name": "color",
  "version": "0.1.0",
  "description": "App to store colors when styling and designing",
  "main": "public/electron.js",
  "author": "Chris Snowman",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@headlessui/react": "^1.1.0",
    "@heroicons/react": "^1.0.1",
    "@tailwindcss/postcss7-compat": "^2.1.2",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "autoprefixer": "^9",
    "concurrently": "^6.0.2",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "node-gyp": "^8.0.0",
    "postcss": "^7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "wait-on": "^5.3.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:craco": "craco start",
    "dev": "concurrently -k \"BROWSER=none yarn start:craco\" \"yarn:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "package": "craco build && electron-forge package",
    "make": "craco build && electron-forge make",
    "make-exe": "craco build && electron-forge make --platform win32"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "12.0.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/mac/icon.icns",
        "name": "Color Colector"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "colorcolv2"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
